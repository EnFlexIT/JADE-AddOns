<!--
   build.xml file
   for JADE Security Plug-in
   to be used with 'ant':
   http://jakarta.apache.org/ant/
-->

<!-- =========  MAIN  ========= -->

<project name="coresec-examples" default="run" basedir=".">
  <!-- set global properties for this build -->
  <property name="libJADEDir" value="../../../../../lib" />
  <property name="lib" value="../../../lib" />
  <property name="classpath" value="${libJADEDir}/jade.jar;${libJADEDir}/Base64.jar;${libJADEDir}/jadeTools.jar;${lib}/jadeSecurity.jar;" /> 


  <target name="run" depends="" description="Startup a JADE Main-Container." >

       <java classname="jade.Boot" fork="yes">
         <arg line="-conf main.conf" />
         <classpath>
           <pathelement path="${classpath}"/>
         </classpath>
       </java>
  </target>


</project>