<!--
   build.xml file
   for JADE Security Plug-in
   to be used with 'ant':
   http://jakarta.apache.org/ant/
-->

<!-- =========  MAIN - ExitExample  ========= -->

<project name="exit-example" default="run" basedir=".">
  <!-- set global properties for this build -->
  <property name="libJADEDir" value="../../../../lib" />
  <property name="lib" value="../../lib" />
  <property name="classpath" value="${libJADEDir}/jade.jar;${libJADEDir}/Base64.jar;${libJADEDir}/jadeTools.jar;${bc.jar};${lib}/jadeSecurity.jar;${lib}/examples.jar;"/> 

  <target name="run" depends="" description="Starts the exit-agent example." >

       <java classname="jade.Boot" fork="yes">
         <arg line="-conf main.conf" />
         <classpath>
           <pathelement path="${classpath}"/>
         </classpath>
       </java>
  </target>

</project>