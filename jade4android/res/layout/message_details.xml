<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget54"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffffff"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
>
<TextView
android:id="@+id/widget26Det"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sender"
>
</TextView>
<EditText
android:id="@+id/senderDet"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:cursorVisible="false"
android:background="@android:drawable/editbox_background"
android:padding="10px"
>
</EditText>
<TextView
android:id="@+id/widget28Det"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Receiver"
>
</TextView>
<EditText
android:id="@+id/receiverDet"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:cursorVisible="false"
android:background="@android:drawable/editbox_background"
android:padding="10px"
>
</EditText>
<TextView
android:id="@+id/widget30Det"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Communicative Act"
>
</TextView>
<EditText
android:id="@+id/comActDet"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:cursorVisible="false"
android:background="@android:drawable/editbox_background"
android:padding="10px"
>
</EditText>
<TextView
android:id="@+id/widget4Det1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Content"
>
</TextView>
<EditText
android:id="@+id/contentDet"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:cursorVisible="false"
android:background="@android:drawable/editbox_background"
android:padding="10px"
>
</EditText>
<LinearLayout
android:id="@+id/widget57"
android:layout_width="308px"
android:layout_height="36px"
android:orientation="horizontal"
android:background="#ffffffff"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<Button android:id="@+id/backBtnDet"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@android:drawable/button_background"
android:text="Back"
android:padding="10px"

>
</Button>
<Button
android:id="@+id/replyBtnDet"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@android:drawable/button_background"
android:text="Reply"
android:padding="10px"
>
</Button>
</LinearLayout>
</LinearLayout>
